<Window x:Class="DriveBuddyWpfApp.MVVM.Views.CreateLessonModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriveBuddyWpfApp.MVVM.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="360" 
        Width="540"
        Style="{StaticResource WinAll}">
    <Border BorderBrush="#111827" BorderThickness="1">
        <Grid Background="#F3F4F6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="#111827">
                <TextBlock Text="Create new Lesson" Style="{StaticResource ModalTitleStyle}" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Margin="10">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Title" Style="{StaticResource LabelStyle}" />
                        <TextBox Text="{Binding NewLesson.Title}" 
                                 Style="{StaticResource TextBoxStyle}" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Date" Style="{StaticResource LabelStyle}" />
                        <DatePicker Style="{StaticResource DatePickerStyle}"
                                    SelectedDate="{Binding NewLesson.LessonDate, StringFormat=dd.MM.yyyy}" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Car" Style="{StaticResource LabelStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  ItemsSource="{Binding AvaiableCars}"
                                  DisplayMemberPath="FullName" 
                                  SelectedValue="{Binding NewLesson.Car}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Second student" Style="{StaticResource LabelStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}" 
                                  ItemsSource="{Binding AvaiableStudents}"
                                  DisplayMemberPath="FullName"
                                  SelectedValue="{Binding NewLesson.Student1}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Course category" Style="{StaticResource LabelStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  SelectedIndex="{Binding SelectedCourseCategoryIndex, Mode=TwoWay}"
                                  SelectedValue="{Binding NewLessonSelectedCourseCategory, Mode=TwoWay}"
                                  SelectedValuePath="Content">
                            <ComboBoxItem>AM</ComboBoxItem>
                            <ComboBoxItem>A</ComboBoxItem>
                            <ComboBoxItem>A1</ComboBoxItem>
                            <ComboBoxItem>A2</ComboBoxItem>
                            <ComboBoxItem>B1</ComboBoxItem>
                            <ComboBoxItem>B</ComboBoxItem>
                            <ComboBoxItem>B+E</ComboBoxItem>
                            <ComboBoxItem>C</ComboBoxItem>
                            <ComboBoxItem>C1</ComboBoxItem>
                            <ComboBoxItem>C1+E</ComboBoxItem>
                            <ComboBoxItem>C+E</ComboBoxItem>
                            <ComboBoxItem>D</ComboBoxItem>
                            <ComboBoxItem>D1</ComboBoxItem>
                            <ComboBoxItem>D1+E</ComboBoxItem>
                            <ComboBoxItem>D+E</ComboBoxItem>
                            <ComboBoxItem>T</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Instructor" Style="{StaticResource LabelStyle}" />
                        <ComboBox ItemsSource="{Binding AvaiableInstructors}"
                                  Style="{StaticResource ComboBoxStyle}" 
                                  SelectedValue="{Binding NewLesson.Instructor}"
                                  DisplayMemberPath="FullName" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="First student" Style="{StaticResource LabelStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  ItemsSource="{Binding AvaiableStudents}"
                                  DisplayMemberPath="FullName" 
                                  SelectedValue="{Binding NewLesson.Student}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0 0 0 5">
                        <TextBlock Text="Third student" Style="{StaticResource LabelStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  ItemsSource="{Binding AvaiableStudents}"
                                  DisplayMemberPath="FullName"
                                  SelectedValue="{Binding NewLesson.Student2}" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Background="#111827">
                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Margin="0" Style="{StaticResource CloseButtonStyle}"
                            Click="CloseModalBtn_Click">
                        <TextBlock Text="cancel" Margin="8 6 8 6"/>
                    </Button>
                    
                    <Button Margin="10 0 0 0" Style="{StaticResource AddButtonStyle}"
                            Command="{Binding AddLessonCommand}">
                        <TextBlock Text="create" Margin="8 6 8 6" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
